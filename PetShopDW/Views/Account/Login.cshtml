@using PetShopDW.Models
@{
    Layout = null;
}
@model LoginViewModel
@{
    ViewBag.Title = "Login";

}
<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>
        PET SHOP DW | Login Page
    </title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="~/assets/Custom.css" rel="stylesheet" />
    <link href="~/metronic/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/metronic/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <link rel="shortcut icon" href="~/Content/img/logo-icon.ico" />
</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-login  @if (ViewBag.IsRegister){<text>m-login--signup</text> } else {<text>m-login--singin</text> } m-login--5" id="m_login" style="background-image: url(../metronic/app/media/img/bg/bg-3.jpg);">
            <div class="m-login__wrapper-1 m-portlet-full-height">
                <div class="m-login__wrapper-1-1">
                    <div class="m-login__contanier">
                        <div class="m-login__content">
                            <div class="m-login__logo" style="margin-left: -100px;">
                                <a href="#">
                                    <img src="~/assets/img/lineage_logo.png" width="650">
                                </a>
                            </div>
                            <div class="m-login__title">
                                <h3>
                                    PET SHOP DW
                                </h3>
                            </div>
                            <div class="m-login__desc">
                                @*Emergent Cold*@
                            </div>
                            <div class="m-login__form-action">
                                <button type="button" id="m_login_signup" class="btn btn-outline-focus m-btn--pill">
                                    Get An Account
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="m-login__border">
                        <div></div>
                    </div>
                </div>
            </div>
            <div class="m-login__wrapper-2 m-portlet-full-height">
                <div class="m-login__contanier">
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Login To Your Account
                            </h3>
                        </div>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            if (ViewBag.ErrorMessage != null)
                            { <div class="m-alert m-alert--outline alert alert-danger alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                                    <span>Incorrect username or password.</span>
                                </div>
                            }
                              <form class="m-login__form m-form" action="">

                                  <div class="form-group m-form__group">
                                      <input class="form-control m-input" type="text" placeholder="User Name" name="username" autocomplete="off">
                                  </div>
                                  <div class="form-group m-form__group">
                                      <input class="form-control m-input m-login__form-input--last" type="Password" placeholder="Password" name="password">
                                  </div>

                                  
                                  
                                  <div class="form-group m-form__group" style="visibility: hidden; position: absolute;">
                                      <input class="form-control m-input m-login__form-input--last" type="number" id="date-offset" name="dateoffset">
                                  </div>
                                  <div class="form-group m-form__group">
                                      <strong>
                                          @Html.ValidationSummary("", new { @class = "text-danger" })
                                          @if (TempData["success"] != null)
                                          {
                                              @Html.ValidationSummary("Successful registered. Please Check your email!", new { @class = "text-success" })
                                          }
                                      </strong>
                                  </div>
                                  <div class="row m-login__form-sub">
                                      <div class="col m--align-left">
                                          <label class="m-checkbox m-checkbox--focus">
                                              <input type="checkbox" name="remember">
                                              Remember me
                                              <span></span>
                                          </label>
                                      </div>
                                      <div class="col m--align-right">
                                          <a href="javascript:;" id="m_login_forget_password" class="m-link">
                                              Forget Password ?
                                          </a>
                                      </div>
                                  </div>
                                  <div class="m-login__form-action">
                                      <button class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air"
                                              type="submit">
                                          Sign In
                                      </button>
                                  </div>
                              </form>
                        }
                    </div>
                    <div class="m-login__signup">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Sign Up
                            </h3>
                            <div class="m-login__desc">
                                Enter your details to create your account:
                            </div>
                        </div>
                        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <form class="m-login__form m-form" action="">

                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="First Name" value="@if (ViewBag.Model != null)
                                    {<text>@ViewBag.Model.FirstName</text>}" name="firstname">
                            </div>

                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Last Name" value="@if (ViewBag.Model != null)
                                    {<text>@ViewBag.Model.LastName</text>}" name="lastname">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Email" value="@if (ViewBag.Model != null)
                                    {<text>@ViewBag.Model.Email</text>}" name="email" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="password" placeholder="Password" name="password">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="password" placeholder="Confirm Password" name="confirmPassword">
                            </div>

                            <div class="form-group m-form__group" style="visibility: hidden; position: absolute;">
                                <input class="form-control m-input m-login__form-input--last" type="number" id="date-offset-register" name="dateoffset">
                            </div>
                            <div>

                            </div>
                            <div class="m-login__form-action">
                                <button type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                                    Sign Up
                                </button>
                                <button id="m_login_signup_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">
                                    Cancel
                                </button>
                            </div>
                            <p style="margin-top: 23px; font-size: 11px;">* Passwords must have at least one digit character ('0'-'9'), at least one lowercase ('a'-'z') and at least one uppercase ('A'-'Z').</p>

                        </form>
                        }
#line default
                    </div>
                    <div class="m-login__forget-password">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Forgotten Password ?
                            </h3>
                            <div class="m-login__desc">
                                Enter your User Name to reset your password:
                            </div>
                        </div>
                        @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            if (ViewBag.ErrorMessage != null)
                            { <div class="m-alert m-alert--outline alert alert-danger alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                                    <span>Incorrect usernames</span>
                                </div>
                            }
                            <form class="m-login__form m-form" action="">
                                @*<div class="form-group m-form__group">
                                        <input class="form-control m-input" type="text" placeholder="Email" name="email" id="m_email" autocomplete="off">
                                    </div>*@
                                <div class="form-group m-form__group">
                                    <input class="form-control m-input" type="text" placeholder="User Name" name="username" autocomplete="off">
                                </div>
                                <div class="m-login__form-action">
                                    <button class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" type="submit">
                                        Request
                                    </button>
                                    <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom ">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="~/metronic/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/metronic/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Base Scripts -->
    <!--begin::Page Snippets -->
    <script src="~/metronic/snippets/pages/user/login.js" type="text/javascript"></script>
    <!--end::Page Snippets -->
</body>
<!-- end::Body -->
</html>
